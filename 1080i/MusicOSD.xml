<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">602</defaultcontrol>
    <include>OpenClose</include>
    <controls>
        <!--
        <control type="progress" id="23" description="Progress Bar">
            <visible>true</visible>
            <posx>-840</posx>
            <posy>-750</posy>
            <width>747</width>
