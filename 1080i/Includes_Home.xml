    <include name="HomeBarAnimation">
        <!-- We move the highlight along the nav bar depending on the 6 visible slots. Starts at 0 as it's an index -->
        <animation condition="StringCompare(Container(9000).Position,1)" effect="slide" start="0,0" end="300,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,2)" effect="slide" start="0,0" end="600,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,3)" effect="slide" start="0,0" end="900,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,4)" effect="slide" start="0,0" end="1200,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,5)" effect="slide" start="0,0" end="1500,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <!-- We are past the visible 6 columns on the screen so stay to the right for the remaining 4 -->
        <animation condition="StringCompare(Container(9000).Position,6)" effect="slide" start="0,0" end="1500,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,7)" effect="slide" start="0,0" end="1500,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,8)" effect="slide" start="0,0" end="1500,0" time="180" easing="inout" reversible="true">Conditional</animation>
        <animation condition="StringCompare(Container(9000).Position,9)" effect="slide" start="0,0" end="1500,0" time="180" easing="inout" reversible="true">Conditional</animation>
    </include>

