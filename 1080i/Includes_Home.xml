                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick condition="Player.HasVideo">ActivateWindow(fullscreenvideo)</onclick>
                    <onclick condition="Player.HasAudio">ActivateWindow(visualisation)</onclick>
                </control>
                <!-- Repeat -->
                <control type="group" description="Repeat Control">
                    <visible>Player.HasAudio</visible>
                    <posx>295</posx>
                    <!-- Actual repeat button is "invisible"-->
                    <control type="button" id="607">
                        <posx>0</posx>
                        <width>38</width>
                        <height>30</height>
                        <label>-</label>
                        <texturefocus>-</texturefocus>
                        <texturenofocus>-</texturenofocus>
                        <onclick>PlayerControl(Repeat)</onclick>
                        <onleft>606</onleft>
                        <onright>608</onright>
                        <onup>609</onup>
                        <!-- Detect if there is focusable content in shelf and go there on down -->
                        <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                        <!-- Else go back to the main nav bar on down -->
                        <ondown>9000</ondown>
                    </control>
                    <!-- Now we switch our repeat icons depending on the focus of 1 above and playlist state-->
                    <control type="image">
                        <visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne + !Control.HasFocus(607)</visible>
