    <include name="MiniPlayer_Home">
        <control type="group" description="Now Playing Home MinPlayer">
            <visible>[Player.HasVideo | Player.HasAudio] + [!Window.IsActive(DialogBusy.xml) | !Window.IsActive(VideoFullscreen.xml)]</visible>
            <animation effect="fade" tween="cubic" easing="inout" time="1200">VisibleChange</animation>
            <posx>100</posx>
            <posy>15</posy>
            <width>800</width>
            <height>100</height>
            <control type="image" description="MiniPlayer Background Image">
                <posx>-100</posx>
                <posy>-21</posy>
                <width>785</width>
                <height>125</height>
                <aspectratio>stretch</aspectratio>
                <texture>img/HomeMenuBar.png</texture>
            </control>
            <control type="image" description="MiniPlayer Background Image Focused">
                <visible>ControlGroup(599).HasFocus(id)</visible>
                <posx>-100</posx>
                <posy>-4</posy>
                <width>785</width>
                <height>85</height>
                <aspectratio>stretch</aspectratio>
                <texture border="50,0,50,0">home/HomeBar.png</texture>
            </control>
            <ondown>700</ondown>
            <control type="group" description="Playing Thumb">
                <posx>0</posx>
                <posy>0</posy>
                <width>75</width>
                <height>75</height>
                <!-- Video Cover -->
                <control type="image">
                    <visible>Player.HasVideo</visible>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>75</width>
                    <height>75</height>
                    <texture fallback="OSD/VideoSettings.png">$INFO[VideoPlayer.Cover]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
                <!-- Music Cover -->
                <control type="image">
                    <visible>Player.HasAudio</visible>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>75</width>
                    <height>75</height>
                    <texture fallback="HUD/Volume.png">$INFO[MusicPlayer.Cover]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>
            <control type="group" description="Playing Info Label">
                <control type="label">
                    <posx>100</posx>
                    <posy>0</posy>
                    <width>560</width>
                    <height>40</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <font>size16</font>
                    <textcolor>Grey3</textcolor>
                    <shadowcolor>ShadowDark</shadowcolor>
                    <scrollspeed>30</scrollspeed>
                    <pauseatend>8000</pauseatend>
                    <scroll>true</scroll>
                    <label>$INFO[VideoPlayer.ChannelNumberLabel,,[COLOR=HL] • [/COLOR]] $INFO[VideoPlayer.ChannelName,,[COLOR=HL] • [/COLOR]] $INFO[VideoPlayer.TVShowTitle,,[COLOR=HL] • [/COLOR]Season] $INFO[VideoPlayer.Season,, Episode] $INFO[VideoPlayer.Episode,,[COLOR=HL] • [/COLOR]] $INFO[MusicPlayer.Artist,,[COLOR=HL] • [/COLOR]] $INFO[MusicPlayer.Album,,[COLOR=HL] • [/COLOR]] $INFO[Player.Title,, ] </label>
                </control>
            </control>
            <!-- Mini Player Controls right under the player info -->
            <control type="group" description="Mini Player Controls" id="599">
                <posx>100</posx>
                <posy>42</posy>
                <width>800</width>
                <height>50</height>
                <align>left</align>
                <onhidden>9000</onhidden>
                <!-- Detect if there is focusable content in shelf and go there on down -->
                <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                <!-- Else go back to the main nav bar on down -->
                <ondown>9000</ondown>
                <defaultcontrol>602</defaultcontrol><!-- User Stop or FullScreen -->

                <!-- Start Main Video Playback Controls -->
                <!-- Skip Back -->
                <control type="button" id="600">
                    <enable>Player.HasVideo | [Player.HasAudio + MusicPlayer.HasPrevious]</enable>
                    <animation effect="fade" start="100" end="50" time="75" condition="Player.HasAudio + !MusicPlayer.HasPrevious">Conditional</animation>
                    <posx>0</posx>
                    <width>22</width>
                    <height>20</height>
                    <texturenofocus>OSDControls/OSDSkipBack.png</texturenofocus>
                    <texturefocus colordiffuse="HL">OSDControls/OSDSkipBack.png</texturefocus>
                    <onup>606</onup>
                    <onleft>599</onleft>
                    <onright>601</onright>
                    <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick>PlayerControl(Previous)</onclick>
                </control>
                <!-- Seek Back -->
                <control type="button" id="601">
                    <enable>Player.SeekEnabled</enable>
                    <animation effect="fade" start="100" end="50" time="75" condition="!Player.SeekEnabled">Conditional</animation>
                    <posx>40</posx>
                    <width>32</width>
                    <height>20</height>
                    <texturenofocus>OSDControls/OSDRewind.png</texturenofocus>
                    <texturefocus colordiffuse="HL">OSDControls/OSDRewind.png</texturefocus>
                    <onleft>600</onleft>
                    <onright>602</onright>
                    <onup>606</onup>
                    <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick>PlayerControl(Rewind)</onclick>
                </control>
                <!-- Play/Pause -->
                <control type="togglebutton" id="602">
                    <enable>Player.PauseEnabled</enable>
                    <animation effect="fade" start="100" end="50" time="75" condition="!Player.PauseEnabled">Conditional</animation>
                    <posx>90</posx>
                    <width>20</width>
                    <height>20</height>
                    <texturenofocus>OSDControls/OSDPlay.png</texturenofocus>
                    <texturefocus colordiffuse="HL">OSDControls/OSDPlay.png</texturefocus>
                    <usealttexture>Player.Playing</usealttexture>
                    <alttexturenofocus>OSDControls/OSDPause.png</alttexturenofocus>
                    <alttexturefocus colordiffuse="HL">OSDControls/OSDPause.png</alttexturefocus>
                    <onleft>601</onleft>
                    <onright>603</onright>
                    <!-- Detect if there is focusable content in shelf and go there on down -->
                    <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick>PlayerControl(Play)</onclick>
                </control>
                <!-- Stop -->
                <control type="button" id="603">
                    <posx>123</posx>
                    <width>20</width>
                    <height>20</height>
                    <texturenofocus>OSDControls/OSDStop.png</texturenofocus>
                    <texturefocus colordiffuse="HL">OSDControls/OSDStop.png</texturefocus>
                    <onleft>602</onleft>
                    <onright>604</onright>
                    <!-- Detect if there is focusable content in shelf and go there on down -->
                    <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick>PlayerControl(Stop)</onclick>
                    <!-- Since we have stopped the player and the mini player will hide.
                    Detect if there is focusable content in shelf and focus there if so -->
                    <onclick condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">Control.SetFocus(700)</onclick>
                    <!-- Else send focus back to the main nav bar -->
                    <onclick condition="![Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)]">Control.SetFocus(9000)</onclick>
                </control>
                <!-- Seek Forward -->
                <control type="button" id="604">
                    <enable>Player.SeekEnabled</enable>
                    <animation effect="fade" start="100" end="50" time="75" condition="!Player.SeekEnabled">Conditional</animation>
                    <posx>160</posx>
                    <width>32</width>
                    <height>20</height>
                    <texturenofocus>OSDControls/OSDFastForward.png</texturenofocus>
                    <texturefocus colordiffuse="HL">OSDControls/OSDFastForward.png</texturefocus>
                    <onleft>603</onleft>
                    <onright>605</onright>
                    <onup>606</onup>
                    <!-- Detect if there is focusable content in shelf and go there on down -->
                    <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick>PlayerControl(Forward)</onclick>
                </control>
                <!-- Skip Forward -->
                <control type="button" id="605">
                    <enable>Player.HasVideo | [Player.HasAudio + MusicPlayer.HasNext]</enable>
