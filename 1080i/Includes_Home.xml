                    <texturefocus colordiffuse="HL">OSDControls/OSDSkipForward.png</texturefocus>
                    <onleft>604</onleft>
                    <onright>606</onright>
                    <onup>606</onup>
                    <!-- Detect if there is focusable content in shelf and go there on down -->
                    <ondown condition="Control.IsVisible(311)|Control.IsVisible(312)|Control.IsVisible(313)|Control.IsVisible(314)|Control.IsVisible(315)">700</ondown>
                    <!-- Else go back to the main nav bar on down -->
                    <ondown>9000</ondown>
                    <onclick>PlayerControl(Next)</onclick>
                </control>

                <control type="button" id="606">
                    <posx>230</posx>
                    <width>80</width>
                    <height>20</height>
                    <align>left</align>
                    <aligny>center</aligny>
                    <textcolor>White</textcolor>
                    <font>size16</font>
                    <onfocus>-</onfocus>
                    <onunfocus>-</onunfocus>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
